{
  "name": "kanby",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "bun run prisma:generate && next build",
    "start": "next start",
    "lint": "eslint",
    "prisma:format": "bunx --bun prisma format --config ./prisma.config.ts",
    "prisma:generate": "bunx --bun prisma generate --config ./prisma.config.ts",
    "db:migrate": "bunx --bun prisma migrate dev --config ./prisma.config.ts",
    "db:push": "bunx --bun prisma db push --config ./prisma.config.ts",
    "db:studio": "bunx --bun prisma studio --config ./prisma.config.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3",
    "nanoid": "^5.1.6",
    "next": "16.1.1",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
